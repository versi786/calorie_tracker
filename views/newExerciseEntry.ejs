<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
   <!--  Include bootstrap from CDN-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <!--  Custom Style sheets -->
    <link rel='stylesheet' href='/stylesheets/loginPage.css' />
    <link rel='stylesheet' href='/stylesheets/users.css' />

    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <!-- Include bootstrap JS from CDN-->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  </head>
  <body>

        <!-- NAVIGATION BAR -->
    <nav class="navbar navbar-default">
      <div class="container-fluid" id="header-container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Food Tracker</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active">
                <button type="button" id="new_food_entry_button" class="btn btn-action navbar-btn" onclick="location.href='/newEntry';">New Manual Entry</button>
            </li>
            <li class="active">
                <button type="button" id="new_search_entry_button" class="btn btn-action navbar-btn" onclick="location.href='/search';">New Search Entry</button>
            </li>
            <li class="active">
                <button type="button" id="new_fav_entry_button" class="btn btn-action navbar-btn" onclick="location.href='/favorites';">New Entry From Favorites</button>
            </li>
            <li>
                <button type="button" id="new_exercise_entry_button" class="btn btn-action navbar-btn" onclick="location.href='/newExerciseEntry';">New Exercise Entry</button>
            </li>
            <li class="active">
                <button type="button" id="calculator_button" class="btn btn-action navbar-btn" onclick="location.href='/calculator';">Calorie Calculator</button>
            </li>
            <li class="active">
                <button type="button" id="history_button" class="btn btn-action navbar-btn" onclick="location.href='/history';">History</button>
            </li>
            <li class="active">
                <button type="button" id="weight_button" class="btn btn-primary navbar-btn" onclick="location.href='/weight';">Weight</button>
            </li>
            <li class="active">
              <form action="/users" method="post">
                <button class="btn btn-primary navbar-btn" type="submit">Download History</button>
            </form>

            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/edit">Edit</a></li>
                <li><a href="/public/<%= username %>">Public View</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="container">
    <div class="content">
      <div class="row">
        <div id="login-form" class='col-sm-offset-4 col-sm-4'>
          <div>
            <h2 id ="header">New Exercise Entry</h2>
            <%if (error) { %>
            <font color="red"><%= error %></font><p>
            <% } %>
            <form action='/newExerciseEntry' method='post' id='foodEntryFORM'>
            <!-- Food entry -->
            <fieldset>
            <div class="form-group">
                <label for="food_input" class="form-control-label">Exercise</label>
                <div>
                    <input type="text" class="form-control" id="exercise_input" placeholder="Activity" name="exercise_input">
                </div>
            </div>
            <div class="form-group">
                <label for="quantity_measure" class="form-control-label">Time</label>
                <div>
                    <select class="form-control" id="quantity_measure" name="quantity_measure">
                        <option>Minutes</option>
                        <option>Hours</option>
                        <option>Miles</option>
                        <option>Kilometers</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="quantity_input" class="form-control-label">Quantity</label>
                <div>
                    <input type="text" class="form-control" id="quantity_input" placeholder="Amount" name="quantity_input">
                </div>
            </div>
            <div class="form-group">
                <label for="fat_input" class="form-control-label">Fat per unit</label>
                <div>
                    <input type="text" class="form-control" id="fat_input" placeholder="Fat" name="fat_input">
                </div>
            </div>
            <div class="form-group">
                <label for="protein_input" class="form-control-label">Protein per unit</label>
                <div>
                    <input type="text" class="form-control" id="protein_input" placeholder="Protein" name="protein_input">
                </div>
            </div>
            <div class="form-group">
                <label for="carbs_input" class="form-control-label">Carbs per unit</label>
                <div>
                    <input type="text" class="form-control" id="carbs_input" placeholder="Carbs" name="carbs_input">
                </div>
            </div>
            <div class="form-group centered-row">
                <button id="completed_food_entry" class="btn btn-submit" type="submit">Complete</button>
            </div>
            </fieldset>
        </form>
            <p></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
